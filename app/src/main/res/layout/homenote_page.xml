<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/gambar_home"
        android:layout_width="428dp"
        android:layout_height="255dp"
        android:background="@drawable/home_img"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="428dp"
        android:layout_height="40dp"
        android:background="@color/hijau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/btn_menu"
            app:layout_constraintBottom_toBottomOf="@id/topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/hoome_logo"
            app:layout_constraintTop_toTopOf="@id/topbar" />

        <TextView
            android:id="@+id/hoome_logo"
            android:layout_width="122dp"
            android:layout_height="31.69dp"
            android:background="@drawable/logo_home"
            app:layout_constraintBottom_toBottomOf="@id/topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/topbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/button_modulnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/gambar_home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn_modul"
            android:layout_width="156dp"
            android:layout_height="32dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/btn_modul" />

        <TextView
            android:layout_width="1.5dp"
            android:layout_height="51dp"
            android:background="@drawable/line_pem"/>

        <Button
            android:id="@+id/btn_note"
            android:layout_width="156dp"
            android:layout_height="30dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/btn_notec" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNote"
        android:layout_width="345dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/button_modulnote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:itemCount="10"
        tools:listitem="@layout/item_note" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_addnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foregroundGravity="bottom"
        android:backgroundTint="@color/hijau"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>