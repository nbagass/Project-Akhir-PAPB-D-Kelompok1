<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/signup_logo"
                android:layout_width="308dp"
                android:layout_height="80dp"
                android:layout_marginTop="159dp"
                android:background="@drawable/app_masuklogo"/>

            <LinearLayout
                android:id="@+id/signup_signupbox"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/signup_daftar"
                    android:layout_width="66dp"
                    android:layout_height="23dp"
                    android:text="Daftar"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/psemibold"/>

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="284dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="17dp"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textSize="13dp"
                    android:fontFamily="@font/pregular"
                    android:background="@drawable/fill_box" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="284dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="17dp"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:textSize="13dp"
                    android:fontFamily="@font/pregular"
                    android:background="@drawable/fill_box" />

                <EditText
                    android:id="@+id/signup_username"
                    android:layout_width="284dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="17dp"
                    android:inputType="text"
                    android:hint="Username"
                    android:textSize="13dp"
                    android:fontFamily="@font/pregular"
                    android:background="@drawable/fill_box" />

                <Button
                    android:id="@+id/signup_submit"
                    android:layout_width="284dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="10dp"
                    android:hint="Daftar"
                    android:textColorHint="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/pbold"
                    android:background="@drawable/sub_btn" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_signupbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signup_anda"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text="Anda sudah memiliki akun?"
                    android:textColor="@color/grey"
                    android:textSize="13dp"
                    android:fontFamily="@font/pregular"/>

                <Button
                    android:id="@+id/signup_masuk"
                    android:layout_width="49.81dp"
                    android:layout_height="23dp"
                    android:background="@color/white"
                    android:hint="Masuk"
                    android:textColorHint="@color/black"
                    android:fontFamily="@font/pregular"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>