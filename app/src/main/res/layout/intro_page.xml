<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/intro_logo"
                android:layout_width="398dp"
                android:layout_height="317dp"
                android:layout_marginTop="128dp"
                android:background="@drawable/app_landinglogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/intro_archi"
                android:layout_width="207dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="Archimedes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:fontFamily="@font/pbold" />

            <TextView
                android:id="@+id/intro_belajar"
                android:layout_width="212dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:text="Belajar Science lebih mudah dan menyenangkan."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/pregular"/>

            <FrameLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/signup_daftar"
                    android:layout_width="169dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:background="@drawable/app_daftar"/>

                <Button
                    android:id="@+id/login_masuk"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_gravity="right"
                    android:background="@drawable/app_masuk"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>