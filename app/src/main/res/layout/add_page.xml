<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="428dp"
        android:layout_height="40dp"
        android:background="@color/hijau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/btn_menu"
            app:layout_constraintBottom_toBottomOf="@id/topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/hoome_logo"
            app:layout_constraintTop_toTopOf="@id/topbar" />

        <ImageView
            android:id="@+id/hoome_logo"
            android:layout_width="122dp"
            android:layout_height="31.69dp"
            android:background="@drawable/logo_home"
            app:layout_constraintBottom_toBottomOf="@id/topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/topbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/titletext"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="305dp"
        android:text="Title"
        android:textColor="@color/hijau"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notetext" />

    <EditText
        android:id="@+id/isititle"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/title_box"
        app:layout_constraintStart_toStartOf="@+id/titletext"
        app:layout_constraintTop_toBottomOf="@id/titletext" />

    <ImageView
        android:id="@+id/btn_kembali2"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/btn_back"
        app:layout_constraintEnd_toStartOf="@+id/notetext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notetext" />

    <TextView
        android:id="@+id/notetext"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:layout_marginTop="11dp"
        android:text="NOTE"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar" />

    <TextView
        android:id="@+id/desctext"
        android:layout_width="127dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@color/hijau"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/isititle"
        app:layout_constraintTop_toBottomOf="@id/isititle" />

    <EditText
        android:id="@+id/isidesc"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/desc_box"
        app:layout_constraintStart_toStartOf="@+id/desctext"
        app:layout_constraintTop_toBottomOf="@id/desctext" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foregroundGravity="bottom"
        android:backgroundTint="@color/hijau"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>