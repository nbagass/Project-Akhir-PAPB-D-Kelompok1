<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addpage_topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/hijau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="31.25dp"
            android:layout_height="23.75dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/btn_menu"
            app:layout_constraintBottom_toBottomOf="@+id/addpage_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/addpage_logo" />

        <ImageView
            android:id="@+id/addpage_logo"
            android:layout_width="122dp"
            android:layout_height="31.69dp"
            android:background="@drawable/logo_home"
            app:layout_constraintBottom_toBottomOf="@id/addpage_topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/addpage_topbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/addpage_titletext"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="305dp"
        android:fontFamily="@font/psemibold"
        android:text="Title"
        android:textColor="@color/hijau"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addpage_back"
        app:layout_constraintTop_toBottomOf="@+id/addpage_textnote" />

    <EditText
        android:id="@+id/addpage_isititle"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/title_box"
        android:paddingLeft="17dp"
        app:layout_constraintStart_toStartOf="@+id/addpage_titletext"
        app:layout_constraintTop_toBottomOf="@id/addpage_titletext" />

    <ImageView
        android:id="@+id/addpage_back"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="@+id/addpage_textnote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addpage_textnote" />

    <TextView
        android:id="@+id/addpage_textnote"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:layout_marginTop="11dp"
        android:text="NOTE"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        android:textSize="28dp"
        android:fontFamily="@font/pbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addpage_topbar" />

    <TextView
        android:id="@+id/addpage_desctext"
        android:layout_width="127dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@color/hijau"
        android:textSize="20dp"
        android:fontFamily="@font/psemibold"
        app:layout_constraintStart_toStartOf="@+id/addpage_isititle"
        app:layout_constraintTop_toBottomOf="@id/addpage_isititle" />

    <EditText
        android:id="@+id/addpage_isidesc"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/desc_box"
        android:paddingLeft="17dp"
        app:layout_constraintStart_toStartOf="@+id/addpage_desctext"
        app:layout_constraintTop_toBottomOf="@id/addpage_desctext" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foregroundGravity="bottom"
        android:backgroundTint="@color/hijau"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>