<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar"
        android:layout_width="428dp"
        android:layout_height="40dp"
        android:background="@color/hijau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/btn_menu"
            app:layout_constraintBottom_toBottomOf="@id/topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/hoome_logo"
            app:layout_constraintTop_toTopOf="@id/topbar" />

        <ImageView
            android:id="@+id/hoome_logo"
            android:layout_width="122dp"
            android:layout_height="31.69dp"
            android:background="@drawable/logo_home"
            app:layout_constraintBottom_toBottomOf="@id/topbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/topbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/btn_kembali2"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/btn_back" />

        <Button
            android:id="@+id/btn_kembali"
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:layout_marginRight="176dp"
            android:text="Kembali"
            android:textSize="20dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:text="Tambah"
            android:textSize="20dp"
            android:background="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/notetext"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:layout_marginTop="9dp"
        android:text="NOTE"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/hijau"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/titletext"
        android:layout_width="98dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="305dp"
        android:layout_marginLeft="25dp"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/hijau"
        app:layout_constraintTop_toBottomOf="@id/notetext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/isititle"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/title_box"
        app:layout_constraintTop_toBottomOf="@id/titletext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/desctext"
        android:layout_width="127dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="276dp"
        android:layout_marginLeft="25dp"
        android:text="Description"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/hijau"
        app:layout_constraintTop_toBottomOf="@id/isititle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/isidesc"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/desc_box"
        app:layout_constraintTop_toBottomOf="@id/desctext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>